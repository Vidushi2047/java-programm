package loop;
import java.util.*;
public class SumOfDigit {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("enter the number: ");
        int n = sc.nextInt();
        int s=0;
        while(n>0)
        {
        	int r=n%10;
        	s = s + r;
        	n = n/10;
        }
        System.out.println(s);
	}
}
















